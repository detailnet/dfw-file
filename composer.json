{
    "name": "detailnet/dfw-file",
    "description": "DETAIL Framework library for filesystem abstraction",
    "type": "library",
    "keywords": [
        "dfw",
        "detailnet",
        "file"
    ],
    "homepage": "https://github.com/detailnet/dfw-file/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/log": "~1.0",
        "detailnet/dfw-core": "~0.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4.5",
        "squizlabs/php_codesniffer" : "~2.2.0",
        "phpmd/phpmd": "~2.1.3",
        "satooshi/php-coveralls": "dev-master",
        "knplabs/gaufrette": "0.1.*",
        "league/flysystem": "0.3.*",
        "bernard/bernard": "~0.12.2",
        "detailnet/dfw-bernard": "~0.1.3"
    },
    "suggest": {
        "knplabs/gaufrette": "For usage of Gaufrette based storage",
        "league/flysystem": "For usage of Flysystem based storage",
        "bernard/bernard": "For usage of Bernard as background processing driver",
        "detailnet/dfw-bernard": "For usage of Bernard as background processing driver"
    },
    "autoload": {
        "psr-0": {
            "Detail\\File\\": "src/"
        }
    },
	"autoload-dev": {
        "psr-0": {
            "DetailTest\\File\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "*phpunit.xml",
            ".travis.yml",
            "build.xml",
            "build.properties",
            "composer.phar"
        ]
    }
}
